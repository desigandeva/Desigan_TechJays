<style>
    h1{
        text-align: center;
    }
    .container{
        width: 100%;
        display: flex;
        text-align: left;
        justify-content: center;
        align-items: center;
    }
    .data{
        /* width: 380px; */
        display: inline;
        background-color: rgb(210,210,210);
        padding: 5px;
        border: 1px solid black;
        border-radius: 12px;
    }
    label{
        padding: 5px;
        font-weight: bold;
    }
    .text_area{
        margin: 0px 20px;
    }
    .btn{
        display: flex;
        justify-content: space-around;
        padding: 4px;
        align-items: center;
    }
    .btn input{
        height: 35px;
        padding: 8px;
        border-radius: 8px;
        border: 0.8px solid black;
        font-weight: bold;
        background-color: aliceblue;
        font-size: 12px;
    }
    .btn p{
        background-color: aliceblue;
        border: 0.8px solid black;
        border-radius: 8px;
        display: inline;
        padding: 8px;
        font-weight: bold;
        font-size: 12px;
        height: 15px;
    }
</style>


<h1>Update Article</h1>

<div class="container">
<div class="data">
    <%= form_for @article, :url => {:action => 'update', :id => @article.id} do |field| %>
<p>
    <label for="">Title : </label>
    <%= field.text_field 'title' %>
</p>
<p>
    <label for="">Author : </label>
    <%= field.text_field 'author' %>
</p>
<p>
    <label for="">Content : </label>
    <div class="text_area">
        <%= field.text_area 'content', size: "40x10" %>
    </div>
</p>
<div class="btn">
    <p>
        <%= link_to "Back", article_list_path %>
    </p>
    <%= submit_tag 'Submit' %>
    <% end %>
</div>
</div>
</div>